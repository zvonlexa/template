@import 'mixins/mixins'
:focus
	outline none

body 
	font-family vegur
	background-color #272727
	width 1200px
.content
	width 940px
	margin auto
	overflow hidden
.content__message
	float left
	width 620px
.content__message-head
.content__find-head
.content__buysell-head
	color #fff
	font-size 36px
	line-height 38px
.content__message-p
	color #939393
	font-size 14px
	line-height 16px
.content__line
	width 100%
	height 0px
	border-bottom 1px dashed #3d3d3d
.content__buysell-info
	list-style none
	padding 0
	margin 0
	font-size 0
.content__buysell-more
	display(inline-block)
	width 180px
.content__buysell-h3
	color #fff
	font-size 24px
	line-height 26px
.content__buysell-p
	color #939393
	font-family Arial
	font-size 14px
	line-height 16px
.content__buysell-button
	size 88px 34px
	background-color #2098f5
.content__find
	float right
	width 270px
.content__find-label
	color #939393
	font-family Arial
	font-size 14px
	line-height 16px
.content__find-selectType
	color #939393
	font-family Arial
	font-size 14px
	line-height 16px	